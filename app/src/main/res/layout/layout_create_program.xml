<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/MyCardView"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.primoz.timetimer.widgets.FontTextView
                android:id="@+id/tvTitleWork"
                style="@style/MyTextViewTitleCardView"
                android:text="How long do you want to WORK?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tvRemoveTimeTrain"
                    style="@style/MyOperatorTextView"
                    android:layout_marginStart="16dp"
                    android:layout_weight="2"
                    android:text="-" />

                <Chronometer
                    android:id="@+id/cTimeWork"
                    style="@style/MyChronoMeter"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:format="%s" />


                <TextView
                    android:id="@+id/tvAddTimeTrain"
                    style="@style/MyOperatorTextView"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="2"
                    android:text="+" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        style="@style/MyCardView"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.primoz.timetimer.widgets.FontTextView
                android:id="@+id/tvTitleRest"
                style="@style/MyTextViewTitleCardView"
                android:text="Who needs REST?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tvRemoveTimeRest"
                    style="@style/MyOperatorTextView"
                    android:layout_marginStart="16dp"
                    android:layout_weight="2"
                    android:text="-" />

                <Chronometer
                    android:id="@+id/cTimeRest"
                    style="@style/MyChronoMeter"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:format="%s" />


                <TextView
                    android:id="@+id/tvAddTimeRest"
                    style="@style/MyOperatorTextView"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="2"
                    android:text="+" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        style="@style/MyCardView"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.primoz.timetimer.widgets.FontTextView
                android:id="@+id/tvTitleRounds"
                style="@style/MyTextViewTitleCardView"
                android:text="ROUNDS?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tvRemoveRound"
                    style="@style/MyOperatorTextView"
                    android:layout_marginStart="16dp"
                    android:layout_weight="2"
                    android:text="-" />

                <TextView
                    android:id="@+id/tvRounds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorText"
                    android:textSize="48sp" />


                <TextView
                    android:id="@+id/tvAddRound"
                    style="@style/MyOperatorTextView"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="2"
                    android:text="+" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>